<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/pokemon_character"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="25sp"
        app:srcCompat = "@drawable/pikachu"
        android:contentDescription="image of a random pokemon character"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Pokemon_name"
        app:layout_constraintBottom_toTopOf="@id/Pokemon_ability"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/Pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:contentDescription="random_pokemon_characters"
        android:text=" Name : Pikachu "
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/Pokemon_ability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:contentDescription="ability of pokemon character"
        android:text= " Ability : Catastropika"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemon_character"
        tools:ignore="HardcodedText"/>

</androidx.constraintlayout.widget.ConstraintLayout>